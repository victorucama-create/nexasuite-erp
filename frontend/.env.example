# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_SOCKET_URL=ws://localhost:3001
VITE_API_TIMEOUT=30000

# Application
VITE_APP_NAME=NexaSuite ERP
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_URL=http://localhost:3000

# Features Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_SENTRY=false

# External Services
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
VITE_SENTRY_DSN=your_sentry_dsn
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_key

# Theme & Branding
VITE_PRIMARY_COLOR=#2c3e50
VITE_SECONDARY_COLOR=#3498db
VITE_COMPANY_NAME=NexaSuite
VITE_COMPANY_COUNTRY=MZ
VITE_DEFAULT_CURRENCY=MZN

# Security
VITE_TOKEN_KEY=nexasuite_auth_token
VITE_REFRESH_TOKEN_KEY=nexasuite_refresh_token
VITE_TOKEN_EXPIRY=24h
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development
VITE_ENABLE_MOCK_API=false
VITE_LOG_LEVEL=debug
VITE_SHOW_DEV_TOOLS=true

